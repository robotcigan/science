extends layout.pug


block content
  
  .grid.grid--container
    .row
      .col.col--lg-8
        .posts-links
          .links
            a.link.link--active(href="") Активные
            a.link(href="") Готовые
          .buttons
            a(href="#new-article").btn.btn--small.modal-open Написать статью
        - for (var i = 0; i < 9; i++)
          .post.post--small.block
            include post-top.pug
            .post__middle
              a(href="").post__title Опыт лечения рака предстательной железы в Клинике Башкирского государственного медицинского университета
              .tags
                .tag.tag--red Медицина
                .tag.tag--green Лечение рака
                .tag Современная медицина

            include post-footer.pug


      .col.col--lg-4
        .popular.block
          .block__label Самое популярное за месяц
          a(href="").popular__img
            img(src="./img/popular.jpg", alt="")
          .block__container
            a(href="").popular__title Будущее кибернетических протезов или как удешевить производство в 2 раза?
            include postinfo.pug
            a(href="").btn.btn--green Подробнее

        .block
          a(href="#collegs").block__label.modal-open Коллеги 
            span 12
          .block__container
            .users
              - for (var i = 0; i < 8; i++)
                .user.user--big.user--vertical
                  .ava
                    img(src="./img/user.png", alt="")
                  .user__container
                    a(href="").user__name Ренат

        .block
          a(href="#collegs").block__label.modal-open Группы 
            span 12
          .block__container
            .groups
              - for (var i = 0; i < 8; i++)
                .group.group--big.group--vertical
                  .ava
                    img(src="./img/popular.jpg", alt="")
                  .group__container
                    a(href="").group__name Ренат



  #collegs.modal
    .modal__title Коллеги
    .modal__container
      .users
        - for (var i = 0; i < 24; i++)
          .user.user--huge.user--vertical
            .ava
              img(src="./img/user.png", alt="")
            .user__container
              a(href="").user__name Ренат

  #new-article.modal
    .modal__title Написать статью
    .modal__container
      form
        .form-control
          input(type="text")
          label Название статьи
        .thumbnail
          .thumbnail__icon
            img.svg(src="./img/thumbnail.svg", alt="")
          .thumbnail__text Выберите изображение для обложки статьи
        .form-control
          select(multiple="multiple").custom-select.custom-select--multi
            option Медицина
            option Современная медицина
            option Альтернативная медицина
          label Научная область
        .form-control
          input(type="text")
          label Научный руководитель
        .form-control
          input(type="text")
          label ВУЗ
        .tabs
          .tabs__header
            .tabs__link.tabs__link--active
              .tabs__icon
                img.svg(src="./img/check.svg")
              span Сбор данных
            .tabs__link
              .tabs__icon
                img.svg(src="./img/check.svg")
              span Статическая информация
            .tabs__link
              .tabs__icon.tabs__icon--red
                img.svg(src="./img/cross.svg")
              span Выводы
          .tabs__content.tabs__content--active
            .form-control
              textarea
              label Текст
          .tabs__content
            .form-control
              textarea
              label Текст
          .tabs__content
            .form-control
              textarea
              label Текст
        .btn Опубликовать

