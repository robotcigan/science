extends layout.pug


block content
  
  .grid.grid--container
    .row
      .col.col--lg-8
        .block
          .special-links
            p Вы состоите в 7 сообществах
            .buttons
              a(href="#new-group").btn.btn--micro.modal-open Создать 
                span сообщество
          .table-items
            - for (var i = 0; i < 7; i++)
              .item
                .user
                  .ava
                    img(src="./img/popular.jpg", alt="")
                  .user__container
                    a(href="").user__name Современная медицина
                    .user__info 1 123 участника
                .controls
                  .controls__icon
                    span
                    span
                    span
                  .controls__menu
                    .controls__link Отписаться


      .col.col--lg-4
        .block.switcher
          a(href="").switcher__link.switcher__link--active Мои сообщества
          a(href="").switcher__link Мероприятия
          .divider
          a(href="").switcher__link Популярные сообщества
        .block
          .block__label Вас пригласили в сообщество
          .block__container
            .user
              .ava
                img(src="./img/popular.jpg", alt="")
              .user__container
                a(href="").user__name Современная медицина
                .user__info 1 223 участника
        .block
          a(href="#collegs").block__label.modal-open Коллеги 
            span 12
          .block__container
            .users
              - for (var i = 0; i < 6; i++)
                .user.user--big.user--vertical
                  .ava
                    img(src="./img/user.png", alt="")
                  .user__container
                    a(href="").user__name Ренат
        .block
          a(href="#collegs").block__label.modal-open Мероприятия 
            span 12
          .block__container
            - for (var i = 0; i < 4; i++)
              a(href="#event").modal-open.event
                .user
                  .ava
                    img(src="./img/popular.jpg", alt="")
                  .user__container
                    .user__name Современная медицина
                    .user__info 1 223 участника
    

  #new-group.modal
    .modal__title Создать сообщество
    .modal__container
      form
        .form-control
          input(type="text")
          label Название сообщества
        .thumbnail
          .thumbnail__icon
            img.svg(src="./img/thumbnail.svg", alt="")
          .thumbnail__text Выберите изображение для обложки сообщества
        //- .form-control
        //-   select(multiple="multiple").custom-select.custom-select--multi
        //-     option Медицина
        //-     option Современная медицина
        //-     option Альтернативная медицина
        //-   label Научная область
        .form-control
          textarea
          label Описание сообщества
        .btn Создать


  #event.modal.modal--event
    .modal--event__wallpaper(style="background-image: url(./img/event.jpg)")
      .modal--event__title Очень длинное название мероприятия
    .modal__container
      .modal--event__date
        img(src="./img/clock.svg", alt="")
        span 17 апреля, вторник
      .modal--event__address
        img(src="./img/placeholder.svg", alt="")
        span Краснодар, улица Пушкина, дом Колотушкина
      br
      p.modal--event__text Очевидно проверяется, что арифметическая прогрессия положительна. Скалярное поле необходимо и достаточно. Наибольший Общий Делитель (НОД) последовательно создает косвенный функциональный анализ. Предел функции восстанавливает анормальный контрпример. Можно предположить, что система координат существенно трансформирует абсолютно сходящийся ряд. Интеграл Фурье, как следует из вышесказанного, упорядочивает расходящийся ряд.
      .modal--event__map
        iframe(src="https://yandex.ru/map-widget/v1/-/CBqB6Ob~8A" frameborder="0")
      a(href="#subscribe").btn.modal-open Записаться

  #subscribe.modal.modal--subscribe
    .modal__title Записаться
    .modal__container
      form
        .form-control
          input(type="text")
          label Секция
        .form-control
          input(type="text")
          label Название доклада
        .form-control
          input(type="text")
          label ФИО
        .form-control
          input(type="text")
          label ВУЗ
        .form-control
          select.custom-select
            option Преподаватель
            option Студент
            option Ординатор
            option Аспирант
            option Научный руководитель
          label Научная область
        .form-control
          select.custom-select
            option Очная
            option Заочная
            option Стендовый доклад
          label Форма участия
        .form-control
          input(type="text")
          label Почтовый адрес учебы/работы
        .form-control
          input(type="text")
          label Электронная почта
        .checkbox
          input(type="checkbox" id="checkbox")
          label(for="checkbox").checkbox__label
          label.checkbox__text(for="checkbox") Я согласен на обработку персональных данных
        .btn Зарегистрироваться








