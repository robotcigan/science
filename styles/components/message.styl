.messages
  display flex
  justify-content space-between
  &__left
    border-right $border
    flex-shrink 0
    max-height: 81.5vh
    max-width 37rem
    overflow hidden
    .user
      border-bottom $border
      margin 0
      padding 2.4rem
      &__container
        max-width 80%
  &__right
    position relative
    &-container
      padding 4rem
    &-current
      border $border
      padding 2.3rem 0
      padding-left 4rem
      .ava
        margin-right 1.6rem
      .user__name
        color $main
        font-weight 500
    .write
      bottom 0
      margin-bottom 0
      position absolute
      width 100%
    

.message
  display flex
  &__container
    padding-left 2rem
  &__top
    align-items center
    display flex
    margin-bottom 1.2rem
    padding-top .8rem
  &__name
    font-weight 500
    margin-right 1.6rem
    transition color .3s ease
    &:hover
      color $primary
  .date
    font-size 1.2rem

.dialog
  &--active
    background-color rgba($light-gray, .3)
    border-right 3px solid $primary

@media(max-width 767px)
  .message
    &__container
      padding-left .8rem
    &__top
      justify-content space-between
      padding-top 1.6rem
    .date
      margin-right 0
    &__text
      margin-left -5.6rem
      margin-top 2.4rem