.messages
  display flex
  justify-content space-between
  &__left
    border-right $border
    flex-shrink 0
    max-width 37rem
    overflow hidden
    .user
      border-bottom $border
      margin 0
      padding 2.4rem
      &__container
        max-width 80%

.message
  display flex
  &__container
    padding-left 2rem
  &__top
    align-items center
    display flex
    margin-bottom 1.2rem
    padding-top .8rem
  &__name
    font-weight 500
    margin-right 1.6rem
    transition color .3s ease
    &:hover
      color $primary
  .date
    font-size 1.2rem