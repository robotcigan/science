.block
  background-color #fff
  border $border
  margin-bottom 3.2rem
  &__label
    border-bottom $border
    display block
    font-size 1.6rem
    // font-weight 500
    padding 2.4rem
    span
      color $gray
      font-weight 400
      margin-left .8rem
  &__container
    padding 2.4rem
  &__info
    display flex
    .item
      align-items center
      display flex
      &__icon
        circle(1.6rem)
        margin-right .8rem
        path
          fill $gray
        .fa
          color $gray
          display block
          margin-right .8rem
      &--active
        .fa-heart
          color $red
      &--share
        path
          fill $primary
      & + .item
        margin-left 1.6rem

.more
  background-color $light-gray
  cursor pointer
  display flex
  justify-content center
  margin-bottom -2.4rem
  margin-left -2.4rem
  margin-right -2.4rem
  margin-top 2.4rem
  padding 1.6rem
  &__text
    margin-right .8rem
  &__icon
    circle(1.6rem)