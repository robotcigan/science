.special-links
  align-items center
  background $special
  display flex
  min-height 5.6rem
  justify-content space-between
  padding 1.2rem 2.4rem
  padding-left 0
  // position relative
  // &:before
  //   background-color rgba($primary, .04)
  //   content ''
  //   height 100px
  //   position absolute
  //   width 100%
  .link
    display inline-block
    padding 0 4rem
    position relative
    span
      color $gray
      font-size 1.2rem
      margin-left .6rem
    &:after
      background-color $primary
      bottom -2rem
      content ''
      display none
      height 2px
      left 0
      position absolute
      width 100%
    &--active
      &:after
        display block
  p
    margin 0
    margin-left 3.2rem
    transform translateY(-1px)

@media(max-width 767px)
  .special-links
    padding-right 1.2rem
    .link
      font-size 1.3rem
      padding 0 1.6rem
    .buttons
      .btn
        span
          display none
    p
      margin-left 1.6rem