.group
  margin-bottom 3.2rem
  &__wallpaper
    background-position center
    background-repeat no-repeat
    background-size cover
    height 32rem
    width 100%
  &__bottom
    align-items center
    background-color #fff
    display flex
    justify-content space-between
    padding 1.6rem 2.4rem
    position relative
  &__right
    padding-right 4rem
  .controls
    top .6rem

@media(max-width 767px)
  .group
    &__wallpaper
      height 20rem
    &__bottom
      padding 1.6rem