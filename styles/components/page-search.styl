.page-search
  display flex
  justify-content space-between
  height 4.8rem
  width 100%
  &__input
    background-color transparent
    border none
    padding-left 3.2rem
    width 100%
  &__btn
    background none
    border none
    cursor pointer
    margin-right 3.2rem
    path
      fill $primary
    &:hover
      path
        fill $main
  .svg
    width 1.4rem
    
@media(max-width 767px)
  .page-search
    &__input
      padding-left 1.6rem
    &__btn
      margin-right .8rem