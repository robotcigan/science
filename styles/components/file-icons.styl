.file-icon
  align-items center
  border-radius 4px
  circle(3.2rem)
  display inline-flex
  justify-content center
  &--pdf
    background-color $red
    box-shadow 0px 4px 5px rgba(234, 87, 87, 0.2)
  &--word
    background-color $primary
    box-shadow 0px 4px 5px rgba(26, 130, 203, 0.2)
  &--excel
    background-color $green
    box-shadow 0px 4px 5px rgba(79, 192, 30, 0.2)
  &__extention
    color #fff
    font-size .8rem
    font-weight 700
    letter-spacing .5px
    text-transform uppercase
