.empty
  display block
  height 10rem

.main-header
  background-color #fff
  border-bottom $border
  cursor pointer
  display flex
  margin-bottom 4rem
  // padding 1.8rem 0
  position fixed
  top 0
  transition box-shadow .3s ease
  width 100%
  z-index 20
  &__container
    align-items center
    display flex
    justify-content space-between
  &__user
    position relative
    padding 2rem 0
    .ava
      margin-right 0
    .user
      margin-right 0
      &__container
        margin-right .8rem
      &__name
        color $main
    &:hover
      & > .dropdown
        opacity 1
        pointer-events initial
        transform none
  &--scroll
    box-shadow 0 8px 16px -3px rgba($gray, .15)

.search
  background-color $light-gray
  border-radius 2.4rem
  display flex
  justify-content space-between
  height 4rem
  width 20rem
  &__input
    background-color transparent
    border none
    padding-left 2.4rem
    width 100%
  &__btn
    background none
    border none
    cursor pointer
    margin-right 1.6rem
    path
      fill $main
    &:hover
      path
        fill $primary
  .svg
    width 1.4rem

.nav
  &__link
    height 100%
    transition color .2s ease
    &:hover
      color $primary
    &--active
      font-weight 500
      position relative
      &:after
        background-color $primary
        bottom -3.2rem
        content ''
        height 2px
        left -20%
        position absolute
        width 140%
    &:not(:last-child)
      margin-right 4rem