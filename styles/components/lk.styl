.lk-header-container
  align-items center
  display flex
  justify-content space-between
  &__left
    margin-bottom 4rem
  &__right
    height 100%

.lk-header
  font-size 2.4rem
  font-weight 300
  transform translateY(1.3rem)


.lk-table
  thead
    background-color transparent
    border-bottom 1px solid #ddd
    th
      color $gray
      padding 1.6rem
  &__number
    display inline-block
    margin-right 2rem
  tr
    border-radius $radius
    transition all .3s ease
    &:nth-child(even)
      background-color transparent
    &:hover
      background-color #fff
      box-shadow 0px 4px 24px rgba(0, 0, 0, 0.05)
  td
    padding 1.6rem
    vertical-align middle
  .link
    color $primary
    font-weight 500
    text-decoration none
    

.researchers
  margin-top -2.4rem

.researcher
  align-items center
  border-bottom $border
  display flex
  justify-content space-between
  margin 0 -2.4rem
  padding 2.4rem
  position relative
  &:last-child
    margin-bottom -2.4rem
  &__dropdown
    background-color #fff
    box-shadow 0px 6px 20px -4px  rgba($main, .4)
    left 8rem
    opacity 0
    padding 2.4rem
    position absolute
    top 6.4rem
    transition all .3s ease
    transform translateY(1rem)
    visibility hidden
    z-index 20
    &:after
      background-color #fff
      circle(1.6rem)
      content ''
      left 2rem
      position absolute
      top -.8rem
      transform rotate(45deg)
    &-link
      display block
      &:not(:last-child)
        margin-bottom 1.6rem
      &:hover
        color $primary
  &__left
    &:hover
      .researcher__dropdown
        opacity 1
        transform none
        visibility visible



.event
  .block__label
    align-items center
    display flex
  &__text
    font-size 1.8rem
    font-weight 300
    margin-bottom 1rem