.tasks
  margin -2.4rem
  .task
    display flex
    border-bottom $border
    padding 2.4rem
    position relative
    &__background
      background-size cover
      height 100%
      left 0
      opacity 0
      position absolute
      top 0
      transition all .3s ease
      width 100%
      z-index 0
      &:after
        background-color rgba($main, .5)
        content ''
        height 100%
        left 0
        position absolute
        top 0
        width 100%
    &__container
      position relative
      z-index 1
    &__number
      align-items center
      border $border
      border-radius 50%
      circle(3.2rem)
      display flex
      justify-content center
      margin-right 1rem
      position relative
      z-index 1
    &__name
      margin-bottom .8rem
    &__countdown
      color $gray
      font-size 1.2rem
    &:hover
      .task
        &__background
          opacity 1
        &__number
          border-color #fff
          color #fff
        &__name
          color #fff
        &__countdown
          color #fff
