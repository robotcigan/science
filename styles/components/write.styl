.write
  align-items center
  border-top $border
  display flex
  justify-content space-between
  padding 0 .8rem
  &__input
    border none
    padding 2.4rem
    width 100%
  &__right
    flex-shrink 0
    margin-right 1.6rem
  &__attach
    background-color transparent
    border none
    margin-right .8rem
  &__send
    background-color transparent
    border none
    cursor pointer
    margin-right 0
    path
      fill $primary
      transition fill .3s ease
    &:hover
      path
        fill $primary - 15%
