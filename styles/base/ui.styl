.btn
  background $primary
  border 0
  border-radius $radius
  color #fff
  cursor pointer
  display inline-block
  font-family $font
  font-size 1.4rem
  font-weight 500
  flex-shrink 0
  line-height 1
  letter-spacing .4px
  max-height 5.4rem
  padding 1.7rem 3.2rem
  text-decoration none
  transition all .4s
  &:hover
    background-color $primary - 15%
  &--full-size
    padding 2.2rem 3rem
    text-align center
    width 100%
  &--green
    background-color $green
    &:hover
      background-color $green - 15%
  & + .btn
    margin-left 2rem

.flatpickr
  &-month
    margin-bottom 1rem
  &-calendar
    padding 1.5rem 0
    &.arrowTop,
    &.arrowBottom
      &:before,
      &:after
        display none !important

.form-control
  // min-height 5rem
  margin-bottom 1.6rem
  position relative
  &__icon
    color $primary
    font-size 2.2rem
    position absolute
    right 2rem
    top 5rem
    .fa
      transition all .2s
  &__text
    color #d9e5ea
    position absolute
    right 2rem
    top 5.2rem
  label
    color $main
    cursor text
    display inline-block
    line-height 1
    font-weight 500
    margin-bottom 1.8rem
    transition all .2s
    max-width 100%
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .select2-selection--single
    background #fff
    border 1px solid #eaeaea
    border-radius $radius
    display block
    font-family $font
    font-size 1.8rem
    line-height 1
    // min-height 4rem
    transition border-color .2s
    padding 1.6rem 2rem
    position relative
    resize vertical
    width 100%
    -webkit-appearance none
    // &:focus
    //   border-color $primary
    //   & + .form-control__icon
    //     transform rotate(180deg)
  textarea
    height 100%
    min-height 12rem

  .select2-container--open + .form-control__icon
      transform rotate(180deg)
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-control__icon
      color $error
  
  &--inline
    align-items center
    display flex
    justify-content space-between
    label
      flex-shrink 0
      margin-bottom 0
      margin-right 5rem
    input,
    select,
    .select2-selection--single
      max-width 40%
    .form-control
      &__text
        top 1.8rem


.select2
  &-container--default
    .select2-selection__arrow b
      display none
  &-dropdown
    border $border
  &-selection
    &--single
      height initial !important
    &__rendered
      line-height 1.2 !important
      padding-left 0 !important
  &-results__option
    padding 1.2rem
    padding-left 2rem
  &-container--open .select2-dropdown--below
    box-shadow 0 16px 24px 0 rgba(135, 149, 163, .1)
  &-dropdown.select2-dropdown--below 
    animation fadeUp .3s forwards


// dropdown element hover
.select2-container--default .select2-results__option--highlighted[aria-selected]
  background-color $primary

.checkbox
  cursor pointer
  display block
  // margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius $radius
    border $border
    cursor pointer
    circle(1.8rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      color $main
      content "\f00c"
      display none
      font-family 'FontAwesome'
      font-size 1.3rem
      left 2px
      position absolute
      top 1px
      z-index 10
  input
    display none
  input:checked + .checkbox__label
    // border-color $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle
  a
    border-bottom 1px dotted #bbb

.radio
  cursor pointer
  display block
  margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius 50%
    border 1px solid $light-gray - 10%
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      background-color $primary
      border-radius 50%
      circle(1.4rem)
      color #fff
      content ''
      display none
      font-size 1.5rem
      left 4px
      position absolute
      top 4px
      z-index 10
  input
    display none
  input:checked + .radio__label
    background-color #fff
    border-color $primary
    box-shadow 0 0 0 1px $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle

.file-upload
  display block
  margin-bottom .8rem
  margin-top .8rem
  input
    display none
    
.tabs
  &__header
    border-bottom $border
    display flex
    justify-content space-between
    margin 0 -3.2rem
    margin-bottom 2.4rem
    padding 0 3.2rem
    padding-right 8rem
  &__link
    color $dark-gray
    cursor pointer
    display flex
    font-size 1.4rem
    padding 2rem 0
    &:not(.tabs__link--active):hover
      color $primary
    &--active
      color $main
      font-weight 500
      padding-left 2rem
      padding-right 2rem
      position relative
      &:after
        background-color $primary
        bottom 0
        content ''
        height 2px
        left 0
        position absolute
        width 100%
  &__icon
    circle(1.6rem)
    fill $green
    margin-right .8rem
    &--red
      fill $red
  &__content
    display none
    &--active
      display block

.noUi
  &-value-large
    &:nth-child(2)
      margin-left 2rem
    &:last-child
      margin-left -2.5rem

#initial-pay
  .noUi
    &-value-large
      &:nth-child(2),
      &:last-child
        &:after
          content ' млн'

#credit-term
  .noUi
    &-value-large
      &:nth-child(2)
        &:after
          content ' год'
      &:last-child
        &:after
          content ' лет'


